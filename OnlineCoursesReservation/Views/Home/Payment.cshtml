@{
    ViewData["Title"] = "الدفع";
}


<div class="container">
    <a asp-action="Index" class="text-decoration-none text-dark">الرئيسية</a>
    <i class="ri-arrow-left-double-fill"></i>
    <a asp-action="Courses" class="text-decoration-none text-dark">الكورسات</a>
    <i class="ri-arrow-left-double-fill"></i>
    <a asp-action="Detals" asp-controller="Home" class="text-decoration-none text-dark">تفاصيل</a>
    <i class="ri-arrow-left-double-fill"></i>
    <a asp-action="Payment" class="text-decoration-none text-dark">الدفع</a>

</div>


<section style="padding: 40px;" class="">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
                <h3 class="text-center mb-5">الدفع</h3>
                <div class="row">
                    <form id="file" action="" class="p-5 shadow-sm">
                        <div class="mb-3">
                            <label for="" class="form-label">الدفع عن طريق</label>
                            <select name="payment-method" id="payment-method" class="form-select" required>
                                <option value=""></option>
                                <option value="">العمقي</option>
                                <option value="">البسيري</option>
                                <option value="">بن دول</option>
                            </select>
                        </div>
                        <h5 class="mb-3">حساب رقم : 12254524 </h5>

                        <div class="mb-3">
                            <label for="bill" class="form-label">اضافة صورة  السند</label>
                            <input type="file" name="bill" id="bill" class="form-control" accept=".png , .jpeg, .jpg" required>
                        </div>

                        <div class="mb-4">
                            <img id="img-container" src="img/ali-wassouf-a-dL1JWE85o-unsplash.jpg" alt="bill" style="width: 30rem;height: 15rem;display: none;object-fit: contain;">
                        </div>

                        <div>
                            <button type="submit" class="my-primary-btn w-100">ادفع</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>


    </div>
</section>

@section Scripts{

    <script>
        document.getElementById('file').addEventListener('change', function (event) {
            const file = event.target.files[0];

            if (!file) {
                return;
            }

            const imageUrl = URL.createObjectURL(file);
            const img_container = document.querySelector('#img-container')
            img_container.src = imageUrl;
            img_container.style.display = 'block';

        })
    </script>

}
