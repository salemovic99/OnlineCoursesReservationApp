@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="">
    <div class="row">
        <div class="col-md-6">

            <form id="profile-form" method="post" enctype="multipart/form-data">



                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-4">

                    <div>
                        @if (Model.Input.ProfilePicture != null)
                        {
                            <img id="img-container" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" alt="Profile_img" width="90px" height="90px" class="rounded-circle">
                        }
                        else
                        {
                            <img id="img-container" src="~/imgs/userprofile.png" alt="Profile_img" width="90px" height="90px" class="rounded-circle" />
                        }
                    </div>
                    <div id="icon-btn" style="cursor:pointer;width:10px;"><i class="ri-edit-line fs-4" title=" تعديل الصورة "></i></div>
                    <label asp-for="Input.ProfilePicture" class="form-label"></label>
                    <input type="file" id="file-input" accept="image/*" asp-for="Input.ProfilePicture" class="form-control" onchange="document.querySelector('#img-container').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>


                </div>


                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>


                <div class="row">

                    <div class="col-xl-6 mb-3">
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-xl-6 mb-3">
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class=" mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 my-primary-btn">حفظ التغييرات</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('#file-input').style.display = 'none';

        document.querySelector('#icon-btn').addEventListener('click',()=>{
            document.querySelector('#file-input').click();

        })

    </script>
}
