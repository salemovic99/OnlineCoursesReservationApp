@{
    ViewData["Title"] = "عام";
}




<section>
    <div class="p-5">
        <div class="row gap-2 ">

            <!--الدورات بطاقة  -->
            <div class="col-xxl-3 col-md-6">
                <div class="card info-card sales-card">
                    <div class="card-body">
                        <h5 class="card-title">الدورات</h5>

                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="ri-book-open-line fs-2"></i>
                            </div>
                            <div class="ps-3">
                                <h6>@ViewBag.CoursesCount</h6>
                            </div>
                        </div>
                    </div>

                </div>
            </div><!-- نهاية بطاقة الدورات -->
            <!-- بطاقة الحجوزات -->
            <div class="col-xxl-3 col-md-6">
                <div class="card info-card ">
                    <div class="card-body">
                        <h5 class="card-title">الحجوزات</h5>

                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="ri ri-currency-line fs-2"></i>
                            </div>
                            <div class="ps-3">
                                <h6>@ViewBag.ReservationCount</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- نهاية بطاقة الحجوزات -->
            <!-- بطاقة العملاء -->
            <div class="col-xxl-3 col-xl-12">

                <div class="card info-card customers-card">
                    <div class="card-body">
                        <h5 class="card-title">المستخدمون</h5>

                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="ri ri-user-3-line fs-2"></i>
                            </div>
                            <div class="ps-3">
                                <h6>@ViewBag.UsersCount</h6>
                            </div>
                        </div>

                    </div>
                </div>
            </div><!-- نهاية بطاقة العملاء -->
            <!-- Reports -->
            <div class="col-12">
                <div class="card">


                    <div class="card-body">
                        <h5 class="card-title">التقارير</h5>

                        <!-- Line Chart -->
                        <div id="reportsChart"></div>

                        <script>
                            document.addEventListener("DOMContentLoaded", () => {
                                new ApexCharts(document.querySelector("#reportsChart"), {
                                    series: [{
                                        name: 'الدورات',
                                        data: [@ViewBag.CoursesCount],
                                    }, {
                                        name: 'الحجوزات',
                                        data: [@ViewBag.ReservationCount]
                                    }, {
                                        name: 'المستخدمون',
                                        data: [@ViewBag.UsersCount]
                                    }],
                                    chart: {
                                        height: 350,
                                        type: 'area',
                                        toolbar: {
                                            show: false
                                        },
                                    },
                                    markers: {
                                        size: 4
                                    },
                                    colors: ['#4154f1', '#2eca6a', '#ff771d'],
                                    fill: {
                                        type: "gradient",
                                        gradient: {
                                            shadeIntensity: 1,
                                            opacityFrom: 0.3,
                                            opacityTo: 0.4,
                                            stops: [0, 90, 100]
                                        }
                                    },
                                    dataLabels: {
                                        enabled: false
                                    },
                                    stroke: {
                                        curve: 'smooth',
                                        width: 2
                                    },
                                   
                                    tooltip: {
                                        x: {
                                            format: 'dd/MM/yy HH:mm'
                                        },
                                    }
                                }).render();
                            });
                        </script>
                        <!-- End Line Chart -->

                    </div>

                </div>
            </div><!-- End Reports -->
            <!-- Recent Sales -->
            <div class="col-12">
                <div class="card recent-sales overflow-auto">



                    <div class="card-body">
                        <h5 class="card-title">الحجوزات الاخيرة </h5>

                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Customer</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row"><a href="#">#2457</a></th>
                                    <td>Brandon Jacob</td>
                                    <td><a href="#" class="text-primary">At praesentium minu</a></td>
                                    <td>$64</td>
                                    <td><span class="badge bg-success">Approved</span></td>
                                </tr>
                               
                            </tbody>
                        </table>

                    </div>

                </div>
            </div><!-- End Recent Sales -->
            <!-- Top Selling -->
            <div class="col-12">
                <div class="card top-selling overflow-auto">


                    <div class="card-body pb-0">
                        <h5 class="card-title">الدورات الأخيرة</h5>

                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">اسم الدورة</th>
                                    <th scope="col">السعر</th>
                                    <th scope="col">عدد المقاعد</th>
                                    <th scope="col">عدد السمجلين</th>
                                </tr>
                                
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row"><a href="#"><img src="assets/img/product-1.jpg" alt=""></a></th>
                                    <td><a href="#" class="text-primary fw-bold">Ut inventore ipsa voluptas nulla</a></td>
                                    <td>$64</td>
                                    <td class="fw-bold">124</td>
                                    <td>$5,828</td>
                                </tr>
                                
                            </tbody>
                        </table>

                    </div>

                </div>
            </div><!-- End Top Selling -->

        </div>
    </div>
</section> 